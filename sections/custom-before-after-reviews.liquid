
{%- style -%}
  .m-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px; 
    padding-bottom : {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }
{%- endstyle -%}

<!-- Swiper CSS -->
<link rel="stylesheet" data-href="https://unpkg.com/swiper/swiper-bundle.min.css" />

<section class="before-after-slider-section m-section-{{ section.id }}" >
  
  <div class="before-after-slider_heading-wrapper">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.subheading }}</p>
  </div>

  <div class="swiper-container container">
    <div class="swiper-wrapper">
      {% for review in section.blocks %}
        <div class="swiper-slide">
          <div class="slider-item card">
            <div class="before-after-container">
              <div class="before_after_slider">    
                  <div class="bf-container">
                    <div class="image-container">
                       <img src="{{ review.settings.before_image | image_url }}" alt="Before" class="before-img image-before" />
                       <img src="{{ review.settings.after_image | image_url }}" alt="After" class="after-img image-after" />
                    </div>
                    <!-- Range input to control before-after slider -->
                    <input
                      type="range"
                      min="0"
                      max="100"
                      value="50"
                      aria-label="Percentage of before photo shown"
                      class="slider"
                    />
                    <div class="slider-line" aria-hidden="true"></div>
                    <div class="slider-button" aria-hidden="true">
                      <!-- Slider control icon -->
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="30"
                        height="30"
                        fill="currentColor"
                        viewBox="0 0 256 256"
                      >
                        <rect width="256" height="256" fill="none"></rect>
                        <line
                          x1="128"
                          y1="40"
                          x2="128"
                          y2="216"
                          fill="none"
                          stroke="currentColor"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="16"
                        ></line>
                        <line
                          x1="96"
                          y1="128"
                          x2="16"
                          y2="128"
                          fill="none"
                          stroke="currentColor"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="16"
                        ></line>
                        <polyline
                          points="48 160 16 128 48 96"
                          fill="none"
                          stroke="currentColor"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="16"
                        ></polyline>
                        <line
                          x1="160"
                          y1="128"
                          x2="240"
                          y2="128"
                          fill="none"
                          stroke="currentColor"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="16"
                        ></line>
                        <polyline
                          points="208 96 240 128 208 160"
                          fill="none"
                          stroke="currentColor"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="16"
                        ></polyline>
                      </svg>
                    </div>
                  </div>
              </div>
              <!-- end before_after_slider -->
            </div>
            <div class="review-content">
              <h4>{{ review.settings.customer_name }}</h4>
              <p>{{ review.settings.review_content }}</p>
              <div class="stars">
                {% for i in (1..review.settings.stars) %}
                  <span>â˜…</span>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- Swiper Navigation -->
    <div class="Swiper-Navigation-Wrapper">
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>
  </div>
</section>

<!-- Swiper JS -->
<script type="lazyload_int" data-src="https://unpkg.com/swiper/swiper-bundle.min.js" defer></script>

<script type="lazyload_int">
  document.addEventListener('DOMContentLoaded', function () {
    // Initialize Swiper
    var swiper = new Swiper('.swiper-container', {
      slidesPerView: 1, // Adjust to the number of items
      spaceBetween: 30,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      breakpoints: {
        900: {
          slidesPerView: 3,
          spaceBetween: 20
        },
        768: {
          slidesPerView: 1,
          spaceBetween: 20
        },
        640: {
          slidesPerView: 1,
          spaceBetween: 10
        }
      }
    });

    // Range slider for before-after functionality
    const sliders = document.querySelectorAll('.slider');
    sliders.forEach(slider => {
      slider.addEventListener('input', (e) => {
        const container = e.target.closest('.bf-container');
        const imageBefore = container.querySelector('.image-before');
        imageBefore.style.width = `${e.target.value}%`;
        container.style.setProperty('--position', `${e.target.value}%`);
      });
    });
  });
</script>

<style>


  /* Swiper controls */
.swiper-button-next,
.swiper-button-prev {
  background-color: rgba(0, 0, 0, 0.5); /* Dark background */
  border-radius: 50%; /* Round buttons */
  padding: 10px;
  color: #fff;
  cursor: pointer;
  position: absolute; /* Absolute positioning */
  top: 50%; /* Align vertically in the middle */
  transform: translateY(-50%); /* Adjust to align middle */
  z-index: 10; /* Keep above the content */
}

.swiper-button-next {
  right: -20px; /* Position to the right, just outside the slider */
}

.swiper-button-prev {
  left: -20px; /* Position to the left, just outside the slider */
}

.swiper-button-next::after, .swiper-button-prev::after {
  font-size: 20px; /* Increase icon size */
}

/* Before-After Container Styling */
.before_after_slider {
  position: relative;
  display: block;
}

.before_after_slider .bf-container {
  display: grid;
  place-content: center;
  position: relative;
  overflow: hidden;
  border-radius: 1rem;
  --position: 50%;
}

.before_after_slider .image-container {
  position: relative;
  width: 300px;
  height: 300px;
  overflow: hidden;
  border-radius: 50%;
}

.before_after_slider img {
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.before_after_slider .image-before {
  position: absolute;
  top: 0;
  left: 0;
  width: var(--position);
  transition: width 0.3s ease;
}

.before_after_slider .slider {
  position: absolute;
  inset: 0;
  z-index: 10;
  cursor: pointer;
  opacity: 0;
  width: 100%;
  height: 100%;
}

.before_after_slider .slider-line {
  position: absolute;
  top: 0;
  left: var(--position);
  width: 0.2rem;
  height: 100%;
  background-color: #fff;
  transform: translateX(-50%);
  pointer-events: none;
}

.slider-button {
  position: absolute;
  top: 50%;
  left: var(--position);
  transform: translate(-50%, -50%);
  background-color: #fff;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: grid;
  place-items: center;
  pointer-events: none;
}

.slider-button svg {
  fill: #ff0077;
}

/* Additional Styling */
.before-after-slider-section {
  padding: 20px;
  text-align: center;
}

.review-content {
  padding-top: 10px;
}

.stars span {
  color: #ffcc00;
}

/* Adjust Swiper Container */
.swiper-container {
  position: relative;
  overflow: hidden; /* Allow buttons to go outside */
}



img.before-img.image-before {
    border-radius: 0;
}

  
</style>

