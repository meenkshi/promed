<div data-section-id="{{ section.id }}" data-section-type="section-countdown-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="section-countdown-v1 section-countdown-v1-{{ section }}">
    <div class="container container-v2">
      <div class="row">
        <div class="col-12 col-md-6">
          <div class="countdown" style="background-image: url({% if section.settings.background_img != blank %}{{section.settings.background_img|img_url:'master'}}{% else %}//via.placeholder.com/760x930{% endif %})">
            <div class="box-info-content">
              <div class=" content-section">
                <div class=" info-deal">
                  <div class="m-auto">
                    {% if section.settings.deal-to != blank %}
                    <div class="deal-to" style="color:{{section.settings.color_sub_title}}">{{section.settings.deal-to}}</div>
                    {% endif %}

                    {% if section.settings.title-deal != blank %}
                    <div class="title-deal" style="color:{{section.settings.color_title}}">{{section.settings.title-deal}}</div>
                    {% endif %}
                  </div>
                </div>
                <div class="countdown-timer">
                  <ul class="mb-0" data-countdown="section-countdown-v1" data-date="{{section.settings.countdown-date}}">
                  </ul>
                </div>

                {% if section.settings.button_banner != blank %}
                <div class="div-button">
                  <a class="button-main1" href="{{section.settings.button_banner_url}}">
                    {{section.settings.button_banner}}
                  </a>
                </div>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
        <div class="col-12 col-md-6">
          <div class="box-info box-info-1">
            <div class="banner-image banner-1">
              <img data-src="{% if section.settings.banner1_img != blank %} {{section.settings.banner1_img | img_url: 'master'}} 
                             {% else %} //via.placeholder.com/760x450  
                             {% endif %}" class="lazyload img-fluid w-100">
            </div>
            <div class="banner-info">
              {% if section.settings.banner1_title != blank %}
              <h4 class="title">
                <a style="color:{{section.settings.color_banner1_title}}" href="{{section.settings.banner1_url}}">
                  {{section.settings.banner1_title}}
                </a>
              </h4>
              {% endif %}
              <div class="box-total-button">
                {% if section.settings.banner1_subtitle != blank %}
                <span style="color:{{section.settings.color_banner1_subtitle}}">{{section.settings.banner1_subtitle}}</span>
                {% endif %}
                {% if section.settings.banner1_button != blank %}
                <a href="{{section.settings.banner1_url}}" class="btn-{{ section.id }}">
                  {{section.settings.banner1_button}}
                  <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                </a>
                {% endif %}
              </div>
            </div>
          </div>
          <div class="box-info box-info-2">
            <div class="banner-image banner-2">
              <img data-src="{% if section.settings.banner2_img != blank %} {{section.settings.banner2_img | img_url: 'master'}} 
                             {% else %} //via.placeholder.com/760x450  
                             {% endif %}" class="lazyload img-fluid w-100">
            </div>
            <div class="banner-info">
              {% if section.settings.banner2_title != blank %}
              <h4 class="title">
                <a style="color:{{section.settings.color_banner2_title}}" href="{{section.settings.banner2_url}}">
                  {{section.settings.banner2_title}}
                </a>
              </h4>
              {% endif %}
              <div class="box-total-button">
                {% if section.settings.banner2_subtitle != blank %}
                <span style="color:{{section.settings.color_banner2_subtitle}}">{{section.settings.banner2_subtitle}}</span>
                {% endif %}
                {% if section.settings.banner2_button != blank %}
                <a href="{{section.settings.banner2_url}}" class="btn-{{ block.id }}">
                  {{section.settings.banner2_button}}
                  <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                </a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<style>
  .section-countdown-v1-{{ section }} .button-main1 {
    background: linear-gradient(to right,{{section.settings.bg_color_hover_button}} 50%,{{section.settings.bg_color_block_button}} 50%) no-repeat scroll right bottom/210% 100% {{section.settings.bg_color_block_button}};
    color : {{section.settings.color_block_button}};
  }
  .section-countdown-v1-{{ section }} .button-main1:hover {
    color : {{section.settings.color_hover_text}};
  }
  .section-countdown-v1-{{ section }} .countdown-timer li span {
    color: {{section.settings.color_countdown}} !important;
  }
  .section-countdown-v1-{{ section }} .countdown-timer li{
    background: {{section.settings.bg_color_subcountdown}} !important;
    color: {{section.settings.color_subcountdown}} !important;
  }
  .section-countdown-v1-{{ section }} .box-info-1 .btn-{{ section.id }} {
    color: {{section.settings.color_banner1_button}};
  }
  .section-countdown-v1-{{ section }} .box-info-1 .btn-{{ section.id }}:hover {
    color: {{section.settings.color_banner1_button_hover}};
  }
  .section-countdown-v1-{{ section }} .box-info-2 .btn-{{ block.id }} {
    color: {{section.settings.color_banner2_button}};
  }
  .section-countdown-v1-{{ section }} .box-info-2 .btn-{{ block.id }}:hover {
    color: {{section.settings.color_banner2_button_hover}};
  }
</style>  


