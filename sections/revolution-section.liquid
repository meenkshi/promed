<section class="revolution-section">
 <div class="container container-v2"> 
  <div class="row">
    {% if section.settings.heading != blank or section.settings.content != blank %}  
     <div class="col-12 text-center">
      {% if section.settings.heading != blank %}<h2>{{ section.settings.heading }}</h2>{% endif %}
      {% if section.settings.content != blank %}<div class="content">{{ section.settings.content }}</div>{% endif %}
     </div> 
    {% endif %}
     {% if section.settings.img != blank %} 
      <div class="image-box col-12 col-md-6">
        <img src="{{ section.settings.img | img_url:"master" }}" alt="" height="" width="">
      </div>
     {% endif %}
      <div class="content-box col-12 col-md-6">
        {% for block in section.blocks %}
         {% if block.type == 'content_item' %} 
         {% if block.settings.title != blank or block.settings.text != blank %}
          <div class="content-item">
            {% if block.settings.title != blank %}<p class="title">{{ block.settings.title }}</p>{% endif %}
            {% if block.settings.text != blank %}<div class="text">{{ block.settings.text }}</div>{% endif %}
          </div>
         {% endif %}  
        {% endif %}   
       {% endfor %}
      </div>
  </div>
 </div>  
</section>


{% schema %}
  {
    "name": "Revolution Section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content"
      },
      {
        "type": "image_picker",
        "id": "img",
        "label": "Image"
      }
    ],
    "blocks": [
      {
        "type": "content_item",
        "name": "Content Item",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Revolution Section"
      }
    ]
  }
{% endschema %}