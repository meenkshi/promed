
{%- style -%}
  .m-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px; 
    padding-bottom : {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }
{%- endstyle -%}



<div class="m-section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="section-blog-v3" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="section-blog-v3 {% if section.settings.enable_pd_small %}pd-small{% endif %}" style="background-color: {{section.settings.bg_section_color}};">
    <div class="container container-v2">
	
      {% if section.settings.section_title != blank %}
      <div class="text-center">            
        <h3 class="title_heading mb-0">{{section.settings.section_title}}</h3>            
      </div>
      {% endif %}
      
        <div class="row js-blog-v3 content-blog-v3">
          {%- assign posts_limit = section.settings.blogs_limit -%}
          {%- assign blog_selected = section.settings.select_blog -%}
          {% if section.settings.select_blog != blank %}
          {% for article in blogs[blog_selected].articles limit: posts_limit %}

          <div class="col-12">
            <div class="content-section-blog-v3">
              <div class="picrure">
                <a href="{{ article.url }}">
                  <img src="{{ article.image.src | img_url: 'original' }}" alt="{{ article.title  }}" class="img-fluid">
                </a>
                {% if section.settings.enable_date %}
                <div class="date">
                  <p class="day mb-0">{{article.published_at | date: " %d" }}</p>
                  <p class="month mb-0">{{article.published_at | date: "%b" }}</p>
                </div>
				{% endif %}
              </div>

              <div class="info_blog">
                {% if section.settings.enable_title %}
                <h4 class="mb-0 title-blog"><a href="{{ article.url }}">{{ article.title  }}</a></h4>
                {% endif %}
				{% if section.settings.enable_excerpt %}
                <p class="content mb-0">
                  {{ article.content | strip_html | truncatewords: 22 }}
                </p>
				{% endif %}
                
                {% if section.settings.button_redmore != blank  %}
                <div class="text-right">
                  <a href="{{ article.url }}"class="btn_readmore"> {{section.settings.button_redmore}}</a>
                </div>
				{% endif %} 
                
              </div>
            </div>
          </div>                
          {% endfor %}
          {% else %}
          {% for i in (1..section.settings.blogs_limit) %}
          <div class="col-12">
            <div class="content-section-blog-v3">
              <div class="picrure">
                <a href="/admin/articles">
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                </a>
                <div class="date">
                  <p class="day mb-0">18</p>
                  <p class="month mb-0">May</p>
                </div>
              </div>
              <div class="info_blog">
                <h4 class="mb-0 title-blog"><a href="/admin/articles">Example Blog Post</a></h4>
                <p class="content mb-0">
                  Rapidiously monetize resource sucking main tainable catalysts for change. Conveniently productivate researched action items via go...
                </p>
                <div class="text-right">
                  <a href="/admin/articles"class="btn_readmore"> Read more</a>
                </div>
              </div>
            </div>
          </div>
          {% endfor %} 
          {% endif %}

       </div> 

       {% if section.settings.btn_link != blank and section.settings.btn != blank %}
          <div class="text-center button-wrapper extras-button-block"><a href="{{ section.settings.btn_link }}">{{ section.settings.btn }}</a></div>
      {% endif %}

      
    </div>
  </div>
</div>

<style>
.extras-button-block{
  margin-top: 80px;
}  
.extras-button-block a{
  color: #fff;
  background: #000;
  padding: 15px 20px;
}  
.extras-button-block a:hover{
  color: #fff;
  background-color: #555; 
}   
</style>

{% schema %}
{
  "name": "BLOG V3",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "default": 50,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "default": 50,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
      {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "rgba(0,0,0,0)"
    },
	 {
        "type": "checkbox",
        "id": "enable_pd_small",
        "label": "Padding Small",
        "default": true
      },
    {
      "type": "color",
      "id": "bg_section_color",
      "label": "Background color",
      "default": "#fffbf9"
    },
    {
      "type": "header",
      "content": "Info Title"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Title",
      "default": "from our blog."
    },
    {
      "type": "header",
      "content": "Setting Blog"
    },
    {
      "type": "blog",
      "id": "select_blog",
      "label": "Select Blog"
    },
    {
      "type": "header",
      "content": "Info Blogs"
    },
    {
      "type": "range",
      "id": "blogs_limit",
      "label": "Limit blogs",
      "min": 2,
      "max": 50,
      "step": 1,
      "default": 3
    },
	{
      "type": "checkbox",
      "id": "enable_date",
      "label": "Show Date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_title",
      "label": "Show Title",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_excerpt",
      "label": "Show Excerpt",
      "default": true
    },
	{
      "type": "text",
      "id": "button_redmore",
      "label": "button redmore",
      "default": "Read more"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "header",
      "content": "Extras Button"
    },
    {
      "type": "text",
      "id": "btn",
      "label": "Button Name"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "BLOG V3",
      "category": "HOME"
    }
  ]
}
{% endschema %}
