<div data-section-id="{{ section.id }}" data-section-type="section-product-v7" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-product-v7">
    <div class="container container-v2">

        <div class="product-v7">

      {% for block in section.blocks %}
      {% if block.type == 'collection' %}
          
        {% assign col = block.settings.select_collection %}
          {% if block.settings.select_style == 'img_large_left' %}
          <div class="row margin-bottom">
            {% for product in collections[col].products limit: 5 %}
            {% assign mod_for = forloop.index | modulo: 5 %}
              
                {% if mod_for == 1 %}
                <div class="col-12 col-lg-6 margin-bottom-mb">
                  <div class="product_best_sell">
                    {% include 'section-product-v7-item-grid' %}
                  </div>
                </div>

                {% elsif mod_for == 2 %}
                <div class="col-12 col-lg-6">
                  <div class="row">

                    <div class="col-6 margin-bottom">
                      <div class="product_best_sell">
                    {% include 'section-product-v7-item-grid' %}
                      </div>
                    </div>
                {% if forloop.last %}    
                  </div>
                </div>
                {% endif %}

                {% elsif mod_for == 3 or mod_for == 4 %}
                    <div class="col-6">
                      <div class="product_best_sell">
                    {% include 'section-product-v7-item-grid' %}
                      </div>
                    </div>
                {% if forloop.last %}    
                  </div>
                </div>
                {% endif %}

                {% elsif mod_for == 0 %}
                    <div class="col-6">
                      <div class="product_best_sell">
                    {% include 'section-product-v7-item-grid' %}
                      </div>
                    </div>

                  </div>
                </div>
                {% endif %}
              
              {% else %}
                <div class="col-12 col-lg-6">
                  <div class="product_best_sell">
                    {% include 'section-product-v7-empty-item-grid' %}
                  </div>
                </div>
      			<div class="col-12 col-lg-6">
                  <div class="row">
                    <div class="col-6 margin-bottom">
                      <div class="product_best_sell">
                        {% include 'section-product-v7-empty-item-grid' %}
                      </div>
                    </div>
                    <div class="col-6 margin-bottom">
                      <div class="product_best_sell">
                        {% include 'section-product-v7-empty-item-grid' %}
                      </div>
                    </div>
                    <div class="col-6">
                      <div class="product_best_sell">
                        {% include 'section-product-v7-empty-item-grid' %}
                      </div>
                    </div>
                    <div class="col-6">
                      <div class="product_best_sell">
                        {% include 'section-product-v7-empty-item-grid' %}
                      </div>
                    </div>
                  </div>
      			</div>
              {% endfor %}
          </div>
		{% else %}
  			<div class="row margin-bottom">
            {% for product in collections[col].products limit: 5 %}
            {% assign mod_for = forloop.index | modulo: 5 %}
              
    			{% if mod_for == 1 %}
                <div class="col-12 col-lg-6">
                  <div class="row">

                    <div class="col-6 margin-bottom">
                      <div class="product_best_sell">
                    {% include 'section-product-v7-item-grid' %}
                      </div>
                    </div>
                {% if forloop.last %}    
                  </div>
                </div>
                {% endif %}

                {% elsif mod_for == 2 or mod_for == 3 %}
                    <div class="col-6 margin-bottom-mb">
                      <div class="product_best_sell">
                    {% include 'section-product-v7-item-grid' %}
                      </div>
                    </div>
                {% if forloop.last %}    
                  </div>
                </div>
                {% endif %}

                {% elsif mod_for == 4 %}
                    <div class="col-6 margin-bottom-mb">
                      <div class="product_best_sell">
                    {% include 'section-product-v7-item-grid' %}
                      </div>
                    </div>

                  </div>
                </div>

                {% elsif mod_for == 0 %}
                <div class="col-12 col-lg-6">
                  <div class="product_best_sell">
                    {% include 'section-product-v7-item-grid' %}
                  </div>
                </div>
			{% endif %}

                
              
              {% else %}
      			<div class="col-12 col-lg-6">
                  <div class="row">
                    <div class="col-6 margin-bottom">
                      <div class="product_best_sell">
                        {% include 'section-product-v7-empty-item-grid' %}
                      </div>
                    </div>
                    <div class="col-6 margin-bottom">
                      <div class="product_best_sell">
                        {% include 'section-product-v7-empty-item-grid' %}
                      </div>
                    </div>
                    <div class="col-6 ">
                      <div class="product_best_sell margin-bottom-mb">
                        {% include 'section-product-v7-empty-item-grid' %}
                      </div>
                    </div>
                    <div class="col-6 ">
                      <div class="product_best_sell margin-bottom-mb">
                        {% include 'section-product-v7-empty-item-grid' %}
                      </div>
                    </div>
                  </div>
      			</div>
                <div class="col-12 col-lg-6">
                  <div class="product_best_sell">
                    {% include 'section-product-v7-empty-item-grid' %}
                  </div>
                </div>
              {% endfor %}
          </div>
        {% endif %}
        {% endif %}
 		{% endfor %}

        </div>
      </div>

    </div>
  </div>

{% schema %}
{
  "name": "PRODUCT V7",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
