<div data-section-id="{{ section.id }}" data-section-type="section-banner-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v2">
    <div class="container container-v2">
      <div class="row ">
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        {% if block.type == "banner" %}
        <div class="col-xl-3 col-md-6 col-12">
          <div class="box-info">
            <div class="box-img">
              <a href="{{block.settings.url_banner}}">
                {% if block.settings.block_img != blank %}
                <img src="{{block.settings.block_img | img_url:'master'}}" class="w-100 img-fluid">
                {% else %}
                <img src="//via.placeholder.com/600x338" class="w-100 img-fluid" alt="">
                {% endif %}
              </a>
            </div>
            <div class="banner-info">
              <div class="banner-content" style="background: {{block.settings.bg_info}}">
                {% if block.settings.block_title != blank %}
                <h3 class="title mb-0">
                  <a href="{{block.settings.url_banner}}">{{block.settings.block_title}}</a>
                </h3>
                {% endif %}
                {% if block.settings.block_subtitle != blank %}
                <var class="subtitle" style="color:{{block.settings.color_block_subtitle}};">
                  {{block.settings.block_subtitle}}
                </var>
                {% endif %}
              </div>
            </div>
          </div>
        </div>

        {% endif %}
        {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  {% if section.blocks.size > 0 %}
  {% for block in section.blocks %}
  {% if block.type == "banner" %}
  .section-banner-v2 .box-info:hover .banner-info .title a {
    color: {{block.settings.color_block_title}};
  }
  {% endif %}
  {% endfor %}
  {% endif %}
</style>

{% schema %}
{
  "name": "BANNER V2",
  "settings": [
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "block_img",
          "label": "Image banner 1",
          "info": "840 x 680px recommended"
        },
        {
          "type": "header",
          "content": "Info"
        },
        {
          "type": "color",
          "id": "bg_info",
          "label": "Background info",
          "default": "#fff"
        },
        {
          "type": "text",
          "id": "block_title",
          "label": "Title banner",
          "default": "Scent Sticks"
        },
        {
          "type": "color",
          "id": "color_block_title",
          "label": "Color title",
          "default": "#f0bfb6"
        },
        {
          "type": "text",
          "id": "block_subtitle",
          "label": "Sub title banner",
          "default": "Sticks"
        },
        {
          "type": "color",
          "id": "color_block_subtitle",
          "label": "Color sub title",
          "default": "#000"
        },
        {
          "type": "url",
          "id": "url_banner",
          "label": "URL banner",
          "default": "/collections/all"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "BANNER V2",
      "category": "HOME",
      "blocks": [
        {
          "type": "banner",
          "settings": {
            "block_title": "Scent Sticks",
            "block_subtitle": "Sticks"
          }
        },
        {
          "type": "banner",
          "settings": {
            "block_title": "Make your own",
            "block_subtitle": "For You"
          }
        },
        {
          "type": "banner",
          "settings": {
            "block_title": "Soaps",
            "block_subtitle": "Natural"
          }
        },
        {
          "type": "banner",
          "settings": {
            "block_title": "Small Candles",
            "block_subtitle": "Candles"
          }
        }
      ]
    }
  ]
}
{% endschema %}
