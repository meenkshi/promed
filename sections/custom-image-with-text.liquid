{% schema %}
{
  "name": "Image Text Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our story"
    },
    {
      "type": "richtext",
      "id": "paragraph1",
      "label": "First Paragraph",
      "default": "<p>Our story begins with two sisters, united by personal challenges...<p>"
    },
    {
      "type": "richtext",
      "id": "paragraph2",
      "label": "Second Paragraph",
      "default": "<p>We created our company with the mission of providing...</p>"
    },
        {
      "type": "richtext",
      "id": "paragraph3",
      "label": "Third  Paragraph",
      "default": "<p>We created our company with the mission of providing...</p>"
    }
  ],
  "presets": [
    {
      "name": "Custom Image Text Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<div class="image-text-section">
  <div class="image-container">
    {% if canonical_url contains '/pages/about-us' %}
        <img alt="Sample Image" src="{{ section.settings.image | img_url: '500x700' }}">
    {% else %}
        <img src="{{ section.settings.image | img_url: '500x700' }}" alt="Sample Image">
    {% endif %}
  </div>
  <div class="text-container">
   
    <div>{{ section.settings.paragraph1 }}</div>
  </div>
  <div>{{  section.settings.paragraph2 }}</div>
   <div style="margin-top:40px;">{{section.settings.paragraph3 }}</div>
</div> 

<style>
.image-text-section {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  background-color: #fff;
  padding: 20px;
  border-radius: 8px;
}
.image-text-section p {
  font-size: 20px;
}

.image-container {
  flex-basis: 25%;
  min-width: 250px;
  margin-bottom: 20px;
}

.image-container img {
  max-width: 100%;
  height: auto;
  border-radius: 8px;
}

.text-container {
  flex: 1;
  padding: 0 20px;
  min-width: 250px;
}

.text-container h2 {
  font-size: 20px;
  margin-bottom: 10px;
}

.text-container p {
  font-size: 20px;
}

/* Responsive Design for Smaller Screens */
@media (max-width: 768px) {
  .image-text-section {
    flex-direction: column;
    padding: 15px;
  }

  .text-container {
    padding: 0;
    text-align: left;
  }

  .text-container p {
    font-size: 20px;
  }
}

 @media (min-width: 768px) and (max-width: 1400px){
   .image-container img {
        max-width: 100%;
        height: 433px;
        border-radius: 8px;
        object-fit: cover;
    }
   .image-container {
      flex-basis: 30%;
    }
 } 
   @media (min-width: 1400px) and (max-width: 1450px){
         .image-container {
          flex-basis: 35%;
          min-width: 250px;
          margin-bottom: 20px;
      }
 }

  
</style>
