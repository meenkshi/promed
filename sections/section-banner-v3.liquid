

<div data-section-id="{{ section.id }}" data-section-type="section-banner-v3" 
  style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} 
         {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v3">
    <div class="
      {% if section.settings.section_width == 'container' %}
        container
      {% elsif section.settings.section_width == 'full-width' %}
        full-width
      {% else %}
        default
      {% endif %}
    ">
      <div class="banner-inner">
        <figure class="banner-thumb mb-0">
          {% if section.settings.banner_img != blank %}
            <img src="{{section.settings.banner_img | img_url: 'master'}}" class="img-fluid" alt="banner">
          {% else %}
            <img src="//via.placeholder.com/1500x450" class="w-100 img-fluid" alt="via">
          {% endif %}
        </figure>
        <div class="banner-info">
          <div class="banner-content">
            {% if section.settings.banner_subtitle != blank %}
              <h4 style="color: {{ section.settings.color_banner_subtitle }}" class="title">
                {{ section.settings.banner_subtitle }}
              </h4>
            {% endif %}

            {% if section.settings.banner_title != blank %}
              <div class="desc">
                <h1 style="color: {{ section.settings.color_banner_title }}; font-size: {{ section.settings.banner_title_font_size }}px; line-height: 70px">
                  {{ section.settings.banner_title }}
                </h1>
              </div>
            {% endif %}


            {% if section.settings.banner_des_title != blank %} 

               <div class="banner_des_text">
                 <p style="color: {{ section.settings.color_banner_title }}">{{ section.settings.banner_des_title }}</p>
               </div>
            
            {% endif %}
            

            
            {% if section.settings.banner_btn_name != blank %}
              <a class="button-main1" href="{{ section.settings.banner_url }}">
                {{ section.settings.banner_btn_name }}
              </a>
            {% endif %}
     
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .section-banner-v3 .container {
    width: 1200px;
    margin: 0 auto;
  }
  .section-banner-v3 .full-width {
    width: 100%;
  }
  .section-banner-v3 .default {
    width: 1400px;
    margin: 0 auto;
  }
  .section-banner-v3 .banner-inner .button-main1 {
    background: linear-gradient(to right, {{ section.settings.bg_color_hover_button }} 50%, {{ section.settings.bg_color_block_button }} 50%) no-repeat scroll right bottom/210% 100% {{ section.settings.bg_color_block_button }};
    color : {{ section.settings.color_block_button }};
  }
  .section-banner-v3 .banner-inner .button-main1:hover {
    background: linear-gradient(to right, {{ section.settings.bg_color_hover_button }} 50%, {{ section.settings.bg_color_block_button }} 50%) no-repeat scroll right bottom/210% 100% {{ section.settings.bg_color_block_button }};
    color : {{ section.settings.color_block_button_hover }};
  }
  
</style>

{% schema %}
{
  "name": "BANNER V3",
  "class": "index-section",
  "settings": [
    {
      "type": "select",
      "id": "section_width",
      "label": "Section Width",
      "options": [
        { "value": "container", "label": "Container (1200px)" },
        { "value": "full-width", "label": "Full Width (100%)" },
        { "value": "default", "label": "Default (1400px)" }
      ],
      "default": "default"
    },
    {
      "type": "image_picker",
      "id": "banner_img",
      "label": "Banner image",
      "info": "1500 x 450px recommended"
    },
    {
      "type": "url",
      "id": "banner_url",
      "label": "Banner URL",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "banner_subtitle",
      "label": "Sub title",
      "default": "Take an addition"
    },
    {
      "type": "color",
      "id": "color_banner_subtitle",
      "label": "Color sub title",
      "default": "#000"
    },
    {
      "type": "text",
      "id": "banner_title",
      "label": "Title",
      "default": "This is a paragraph. This is a paragraph."
    },
    {
      "type": "textarea",
      "id": "banner_des_title",
      "label": "Title",
      "default": "This is a paragraph. This is a paragraph."
    },
    {
      "type": "color",
      "id": "color_banner_title",
      "label": "Color title",
      "default": "#000"
    },

    {
      "type": "range",
      "id": "banner_title_font_size",
      "label": "Font Size",
      "default": 16,
      "min": 12,
      "max": 100,
      "step": 1,
      "unit": "px"
    },
    
    {
      "type": "text",
      "id": "banner_btn_name",
      "label": "Button name",
      "default": "SHOP NOW"
    },
    {
      "type": "header",
      "content": "Background Color Button"
    },
    {
      "type": "color",
      "id": "bg_color_block_button",
      "label": "Background Color button",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "color_block_button",
      "label": "Color button",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "bg_color_hover_button",
      "label": "Background Hover Color",
      "default": "#f0bfb6"
    },
    {
      "type": "color",
      "id": "color_block_button_hover",
      "label": "Color button hover",
      "default": "#fff"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "BANNER V3",
      "category": "HOME"
    }
  ]
}
{% endschema %}
