<style>
  .c-usps__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-bottom: 25px;
}

  .swiper-pagination {
  bottom: 10px;
}
  @media(min-width: 1200px){
    .c-usps__title {
      font-size: {{section.settings.heading-font-size}}px; 
    }
  }
   @media(max-width: 768px){
    .c-usps__title {
      font-size: {{section.settings.m-heading-font-size}}px !important; 
    }
     .swiper-container {
        height: 123px;
      }
  }
</style>

<div data-section-id="{{ section.id }}" data-section-type="section-service-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
 
  
  <div class="container container-v2">
   
    
    <div class="section-service-v1">


      <div class="c-usps__content">
        <p class="c-usps__pretitle o-subheading">{{ section.settings.sub-heading }}</p>
        <h3 class="c-usps__title" style="font-size: {{ section.settings.heading-font-size }}px"> {{ section.settings.heading }}</h3>
    </div>



      
     <div class="swiper-container">
        <div class="swiper-wrapper">
          {% if section.blocks.size > 0 %}
          {% for block in section.blocks %}
          {% if block.type == "service" %}
          <div class="swiper-slide box-service">
            <div class="text-center itemtservice justify-content-center">
              <div class="box-service-box">
                <div class="number">
                  {% if block.settings.img_icon != blank %}
                  <img src="{{block.settings.img_icon | img_url : 'master'}}">
                  {% else %}
                  {{block.settings.block_number}}
                  {% endif %}
                </div>
                <div class="info">
                  {% if block.settings.block_title != blank %}
                  <h4 class="title">{{block.settings.block_title}}</h4>
                  {% endif %}
                  {% if block.settings.block_content != blank %}
                  <p class="content">{{block.settings.block_content}}</p>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
          {% endif %}
          {% endfor %}
          {% endif %}
        </div>
         <!-- Add Pagination -->
          <div class="swiper-pagination"></div>
      </div>




      
    </div>
  </div>
</div>



{% schema %}
{
  "name": "SERVICE V1",
  "class": "index-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Background image Section"
    },
    {
