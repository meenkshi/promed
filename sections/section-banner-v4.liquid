<div data-section-id="{{ section.id }}" data-section-type="section-banner-v4" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v4">
    <div class="lazyload">
      <div class="row no-gutters align-items-center" style="{% if section.settings.enable_bg_img %}{% else %}background: {{section.settings.bg_banner}}{% endif %}"> 

        <div class="col-12 col-md-6 {% if section.settings.select_pos =='left' %} order-md-2  {% else %} order-md-1 order-2{% endif %}">
          <div class="box-img img-right">
            {% if section.settings.img_banner_left != blank %}
            <img src="{{section.settings.img_banner_left | img_url : 'master'}}" class="lazyloaded img-fluid w-100" alt >
            {% else %}
            <img src="//via.placeholder.com/960x960" class="lazyloaded img-fluid w-100" alt>
            {% endif %}
          </div>
        </div>
        <div class="col-12 col-md-6 {% if section.settings.select_pos =='left' %} order-md-1 {% else%} order-md-2 order-1{% endif %}">
          <div class="box-img1" style="{% if section.settings.enable_bg_img == 'false'%}background: {{section.settings.bg_banner}}{% endif %}">
            <div class="img-left">
              {% if section.settings.enable_bg_img %}
              {% if section.settings.img_banner_right != blank %}
              <img src="{{section.settings.img_banner_right | img_url : 'master'}}" class="lazyloaded img-fluid w-100" alt >
              {% else %}
              <img src="//via.placeholder.com/960x960" class="lazyloaded img-fluid w-100" alt>
              {% endif %}
              {% endif %}
              <div class="banner-content text-center text-lg-left">
                {% if section.settings.title_banner != blank %}
                <h3 class="title-banner" style="color: {{section.settings.color_title}}">{{section.settings.title_banner}}</h3>
                {% endif %}
                {% if section.settings.sub_title_banner != blank %}
                <p class="sub-title" style="color: {{section.settings.color_sub_title}}">{{section.settings.sub_title_banner}}</p>
                {% endif %}

                <div class="btn_top">
                  {% if section.settings.button_banner != blank %}
                  <a href="{{section.settings.url_banner}}" class="button-shop button-shop-{{ section.id }}" title="">{{section.settings.button_banner}}</a>
                  {% endif %}
                </div>
                <div class="btn_bottom">
                  {% if section.settings.button_banner2 != blank %}
                  <a href="{{section.settings.url_banner2}}" class="button-shop button-shop2-{{ section.id }}" title="">{{section.settings.button_banner2}}</a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .section-banner-v4 .img-left .banner-content .button-shop-{{ section.id }} {
    color: {{section.settings.color_btn}};
    border: 1px solid  {{section.settings.color_btn}};
    background: transparent;
  }
  .section-banner-v4 .img-left .banner-content .button-shop-{{ section.id }}:hover {
    color: {{section.settings.color_btn_hover}};
    background: {{section.settings.bg_btn_hover}};
    border: 1px solid  {{section.settings.bg_btn_hover}};
  }
  .section-banner-v4 .img-left .banner-content .button-shop2-{{ section.id }} {
    color: {{section.settings.color_btn2}};
    border: 1px solid  {{section.settings.color_btn2}};
    background: transparent;
  }
  .section-banner-v4 .img-left .banner-content .button-shop2-{{ section.id }}:hover {
    color: {{section.settings.color_btn_hover2}};
    background: {{section.settings.bg_btn_hover2}};
    border: 1px solid  {{section.settings.bg_btn_hover2}};
  }
</style>
