<!-- sections/benefit-v2.liquid -->



{%- style -%}
  .m-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px; 
    padding-bottom : {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }
{%- endstyle -%}

<div class="benefit-v2-box m-section-{{ section.id }} ">
  <div class="benefit-v2-wrapper">
    <div class="container">
      <div class="benefit-v2-header">
        <div class="header_sub">{{ section.settings.subheader_text }}</div>
        <h3 class="title">{{ section.settings.header_text }}</h3>
      </div>
      <div class="benefit-v2-slider">
        {% for block in section.blocks %}
            <div class="les_specices-items">
              <h4><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{ block.settings.title }}</font></font></h4>
              
              <div class="les_specices-wrapper">
                <div class="les_specices-item">
                  <img src="{{ block.settings.img1 | image_url }}" width="64" height="64" alt="{{ block.settings.img1.src | remove : 'files/' | remove : '.png' | remove : '.jpg' | remove : ".webp" }}" />
                <span> {{ block.settings.imagh1 }}</span>
              </div>
              <div class="les_specices-item">
                <img src="{{ block.settings.img2 | image_url }}" width="64" height="64" alt="{{ block.settings.img2.src | remove : 'files/' | remove : '.png' | remove : '.jpg' | remove : ".webp" }}" />
                <span> {{ block.settings.imagh2 }}</span>
              </div>
              <div class="les_specices-item">
                <img src="{{ block.settings.img3 | image_url }}" width="64" height="64" alt="{{ block.settings.img3.src | remove : 'files/' | remove : '.png' | remove : '.jpg' | remove : ".webp" }}" />
                <span> {{ block.settings.imagh3 }}</span>
              </div>
              <div class="les_specices-item">
                <img src="{{ block.settings.img4 | image_url }}" width="64" height="64" alt="{{ block.settings.img4.src | remove : 'files/' | remove : '.png' | remove : '.jpg' | remove : ".webp" }}" />
                <span> {{ block.settings.imagh4 }}</span>
              </div>
              </div>
              
            </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>

  .benefit-v2-header h3 {
    font-size: 24px;
    font-weight: bold;
    text-align: center;
  }
  
  .benefit-v2-li {
    border: 1px solid #e5e5e5;
    border-radius: 10px;
    padding: 20px;
    text-align: center;
  }
  .benefit-v2-li .ice-img img {
      width: 100%;
      height: 376px !important;
  }
  .ice_txt-1, .ice_txt-2 {
    margin-top: 10px;
  }

  /* Slick Slider Overrides */
  .slick-slide {
    margin: 0 10px;
  }
  .slick-prev, .slick-next {
    z-index: 1;
  }

.benefit-v2-box .title {
    font-family: Jost;
    font-size: 36px;
    color: #333333;
    font-weight: 700;
    margin-bottom: 25px;
}

  .ice_tle-1 {
    font-weight: 700;
    font-size: 24px;
}

.les_specices-item {
    display: flex;
    align-items: center;
}

  .les_specices-item img {
    width: 24px;
    height: 24px;
}

.les_specices-item {
    gap: 10px;
}

  .les_specices-wrapper {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

  .les_specices-items {
    height: 350px;
    border: 1px solid #ddee;
    padding: 20px;
}

  @media (max-width: 992px){
      .les_specices-items {
        height: 400px;
        border: 1px solid #ddee;
        padding: 20px;
    }
  }

 
  
</style>



<script type="lazyload_int">
  document.addEventListener('DOMContentLoaded', function () {
    $('.benefit-v2-slider').slick({
      slidesToShow: 2,
      slidesToScroll: 1,
      arrows: true,
      dots: true,
      responsive: [
        {
          breakpoint: 768,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1,
            autoplay: 2000,
            dots: true,
          }
          
        }
      ]
    });
  });
</script>

