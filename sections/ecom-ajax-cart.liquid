                  <span class="ecom-ajax-cart-actions__footer-end-icon">
                    <svg width="21" height="21" viewBox="0 0 21 21" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M10.5 0.614258L2.625 3.47813V10.4055C2.62689 11.7575 2.94764 13.0901 3.56122 14.2949C4.17479 15.4997 5.06388 16.5428 6.15628 17.3394L10.5 20.4986L14.8437 17.3394C15.9361 16.5428 16.8252 15.4997 17.4388 14.2949C18.0524 13.0901 18.3731 11.7575 18.375 10.4055V3.47813L10.5 0.614258ZM17.0625 10.4055C17.0607 11.5506 16.789 12.6791 16.2694 13.6994C15.7498 14.7198 14.9969 15.6033 14.072 16.2783L10.5 18.8764L6.92803 16.2783C6.00306 15.6033 5.25023 14.7198 4.73064 13.6994C4.21104 12.6791 3.93931 11.5506 3.9375 10.4055V4.39688L10.5 2.01076L17.0625 4.39688V10.4055Z" fill="black"/>
                      <path d="M7.68184 8.88757L6.75391 9.81551L9.67881 12.7404L14.2443 8.17489L13.3164 7.24695L9.67881 10.8845L7.68184 8.88757Z" fill="black"/>
                    </svg>              
                  </span>
                  <span class="ecom-ajax-cart-actions__footer-label">
                    {{ 'sections.ecom-ajax-cart.guarantee_safe_checkout' | t }}
                  </span>
                </div>
              {%endif%}
              <div class="ecom-ajax-cart-actions__footer-payment-logos">
                {%if SETTINGS.image_type == 'payment'%}
                  <ul class="ecom-ajax-cart__payment-method-item">
                    {%- for type in shop.enabled_payment_types -%}
                      <li class="ecom-ajax-cart__payment-method-item">
                      {{ type | payment_type_svg_tag: class: 'ecom-ajax-cart__payment-method-svg' }}
                      </li>
                    {%- endfor -%}
                  </ul>
                {%elsif SETTINGS.image_type == 'none'%}
                {%else%}
                  {%- if SETTINGS.image.value -%}
                    <img
                        src="{{SETTINGS.image.value}}"
                        alt="{{SETTINGS.image.name}}"
                        {%- if SETTINGS.image_size -%}width="{{SETTINGS.image_size}}"{%- endif -%} />
                  {%- endif -%}
                {%endif%}
              </div>
              </div>
        </div>
        <!-- ecom-ajax-cart-footer -->
      </form>
    </div>
    <!-- ecom-ajax-cart-container -->
  </div>
  <!-- ecom-ajax-cart-wrapper -->
  <style>
    :root {
      --continue-color: {{ continue_color | default: '#fff' }};
      --continue-color-hover: {{ continue_color_hover | default: continue_color | default: '#fff' }};
      
      --viewcart-color: {{ viewcart_color | default: '#fff' }};
      --viewcart-color-hover: {{ viewcart_color_hover | default: viewcart_color | default: '#fff' }};
      
      --checkout-color: {{ checkout_color | default: '#fff' }};
      --checkout-color-hover: {{ checkout_color_hover | default: checkout_color | default: '#fff' }};
    }
    .ecom-ajax-cart-continue-shopping-button {
      {{ continue_background }};
    }
    .ecom-ajax-cart-continue-shopping-button:hover {
      {{ continue_background_hover }};
    }
    .ecom-ajax-cart-viewcart-button {
      {{ viewcart_background }};
    }
    .ecom-ajax-cart-viewcart-button:hover {
      {{ viewcart_background_hover }};
    }
    .ecom-ajax-cart-checkout-button {
      {{ checkout_background }};
    }
    .ecom-ajax-cart-checkout-button:hover {
      {{ checkout_background_hover }};
    }
  </style>
</div>

