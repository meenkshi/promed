{% assign key = canonical_url | split: 'key=' | last | split: '&' | first | replace: '%3a', ':' %}
{% assign type = canonical_url | split: 'type=' | last | split: '&' | first %}
{%- assign SETTINGS = shop.metafields.ecomposer['ajax-cart'].value -%}
{% liquid 
    # style button
    assign typo_button = SETTINGS.typo_button
    assign typo_button__tablet = SETTINGS.typo_button__tablet
    assign typo_button__mobile = SETTINGS.typo_button__mobile
    assign width = SETTINGS.width
    assign width__tablet = SETTINGS.width__tablet
    assign width__mobile = SETTINGS.width__mobile
    assign border_radius = SETTINGS.border_radius
    assign button_padding = SETTINGS.spacing.padding
    assign button_padding__tablet = SETTINGS.spacing__tablet.padding
    assign button_padding__mobile = SETTINGS.spacing__mobile.padding
    assign button_margin = SETTINGS.spacing.margin
    assign button_margin__tablet = SETTINGS.spacing__tablet.margin
    assign button_margin__mobile = SETTINGS.spacing__mobile.margin

    # border
    assign buttonBorder_style = SETTINGS.buttonBorder.border-style
    assign buttonBorder_color = SETTINGS.buttonBorder.border-color
    assign buttonBorder_width_l = SETTINGS.buttonBorder.border-width.left
    assign buttonBorder_width_t = SETTINGS.buttonBorder.border-width.top
    assign buttonBorder_width_r = SETTINGS.buttonBorder.border-width.right
    assign buttonBorder_width_b = SETTINGS.buttonBorder.border-width.bottom

    # font 
    assign google_font_css = SETTINGS.google_font_css 
    assign custom_font_css = SETTINGS.custom_font_css

%}
{% style %}
  {%- if google_font_css.size > 0 -%}
    {%- for css in google_font_css -%}
      {{ css }}
    {%- endfor -%}
  {%- endif -%} 

  {%- if custom_font_css.size > 0 -%}
    {%- for css in custom_font_css -%}
      {{ css }}
    {%- endfor -%}
  {%- endif -%}
  .ecom-ajax-cart {
    display: block;
    position: relative;
    width: 90vw; 
    max-width: 950px;
    margin: auto;
    background: #FFFFFF;
    -webkit-box-shadow: 0 4px 15px rgb(0 0 0 / 10%), 0 4px 2px rgb(255 255 255 / 6%);
    box-shadow: 0 4px 15px rgb(0 0 0 / 10%), 0 4px 2px rgb(255 255 255 / 6%);
    border-radius: 8px;
    padding-inline: 40px;
    padding-bottom: 27px;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    max-height: 95vh;
    overflow-y: scroll;
    overflow-x: hidden;
  }

  .ecom-ajax-cart::-webkit-scrollbar {
    width: 1px;
  }

  form.ecom-ajax-cart-contents {
    display: -ms-grid;
    display: grid;
    -ms-flex-line-pack: center;
    align-content: center;
  }

  .ecom-ajax-cart-header {
    padding: 15px 0 15px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .ecom-ajax-cart-header > h3 {
    font-style: normal;
    font-weight: 400;
    font-size: 28px;
    line-height: 32px;
    color: #000;
    margin: 0;
  }

  .ecom-ajax-cart-status{
    border-block: 1px solid #EBEBEB;
    padding-block: 17px 24px;
  }
  .ecom-ajax-cart-status h4{
    color: #000;
    margin-bottom: 0;
    font-size: 20px;
    font-weight: 400;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .ecom-ajax-cart-status h4 svg{
    margin-right: 10px
  }

  .ecom-ajax-cart-status p{
    font-size: 14px;
    font-weight: 400;
    line-height: 22px;
    color: #545454;
    margin:0;
  }
