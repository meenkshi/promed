    display: -ms-grid;
    display: grid;
    -ms-flex-line-pack: start;
    align-content: start;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: start;
    -ms-flex-align: start;
    align-items: start;
  }

  .ecom-ajax-cart-line-item-cart-item-totals {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
    gap: 24px;
  }

  .ecom-ajax-cart-line-item-media {
    max-width: 100px;
  }

  .ecom-ajax-cart-line-item-details > * {
    display: block;
    width: 100%;
    margin: 0;
    padding: 0;
  }

  .ecom-ajax-cart-footer-informations {
    width: 100%;
  }

  .ecom-ajax-cart-totals__subtotal {
    font-style: normal;
    font-weight: 600;
    font-size: 20px;
    color: #111827;
    margin-right: 5px;
  }

  .ecom-ajax-cart-totals__subtotal-value {
    margin: 0;
    font-style: normal;
    font-weight: 400;
    font-size: 20px;
    color: #000;
  }
  .ecom-ajax-cart-totals__decs{
    margin: 0 0 20px;
    font-size: 14px;
    color: #545454;
  }
  .ecom-ajax-cart-actions__footer {
    display: flex;
    justify-content: space-around;
    gap: 16px;
  }
  .ecom-ajax-cart-tax-note {
    margin-top: 12px;
    font-style: normal;
    font-weight: normal;
    font-size: 14px;
    line-height: 20px;
    color: #374151;
    display: block;
  }

  .ecom-ajax-cart-view-details {
    display: block;
    width: 100%;
  }

  .ecom-ajax-cart-view-details-button {
    margin-top: 24px;
    display: block;
    font-style: normal;
    font-weight: 500;
    font-size: 14px;
    line-height: 20px;
    text-align: center;
    color: var(--ecom-global-colors-primary);
    padding: 12px 24px;
    background: #FFFFFF;
    border: 2px solid var(--ecom-global-colors-primary);
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    border-radius: 4px;
    width: 100%;
    text-decoration: none;
  }
  .ecom-ajax-cart-button {
    display: inline-block;
    text-decoration: none;
    width: 100%;
    border: 1px solid #000;
    padding: 15px 30px;
    -webkit-transition: all 0.3s ease;
    -o-transition: all 0.3s ease;
    transition: all 0.3s ease;
    background: var(--ecom-global-colors-primary);
    font-style: normal;
    font-weight: 600;
    font-size: 14px;
    line-height: 20px;
    text-align: center;
    {% if typo_button %}
      {{ typo_button }}
    {% endif %}
    {% if button_padding %}
        {% if button_padding.top %}
            padding-top: {{ button_padding.top }};
        {% endif %}
        {% if button_padding.right %}
            padding-right: {{ button_padding.right }};
        {% endif %}
        {% if button_padding.bottom %}
            padding-bottom: {{ button_padding.bottom }};
        {% endif %}
        {% if button_padding.left %}
            padding-left: {{ button_padding.left }};
        {% endif %}
    {% endif %}
    {% if button_margin %}
        {% if button_margin.top %}
            margin-top: {{ button_margin.top }};
        {% endif %}
        {% if button_margin.right %}
            margin-right: {{ button_margin.right }};
        {% endif %}
        {% if button_margin.bottom %}
            margin-bottom: {{ button_margin.bottom }};
        {% endif %}
        {% if button_margin.left %}
            margin-left: {{ button_margin.left }};
        {% endif %}
    {% endif %}
    {% if border_radius %}
        border-top-left-radius: {{ border_radius.top }};
        border-top-right-radius: {{ border_radius.right }};
        border-bottom-right-radius: {{ border_radius.bottom }};
        border-bottom-left-radius: {{ border_radius.left }};
    {% endif %}
    {% if buttonBorder_style %}
        border-style: {{ buttonBorder_style }};
    {% endif %}
    {% if buttonBorder_color %}
        border-color: {{ buttonBorder_color }};
    {% endif %}
    {% if buttonBorder_width_l %}
        border-left-width: {{ buttonBorder_width_l }};
    {% endif %}
    {% if buttonBorder_width_t %}
        border-top-width: {{ buttonBorder_width_t }};
    {% endif %}
    {% if buttonBorder_width_r %}
        border-right-width: {{ buttonBorder_width_r }};
    {% endif %}
    {% if buttonBorder_width_b %}
        border-bottom-width: {{ buttonBorder_width_b }};
    {% endif %}
  }
  .ecom-ajax-cart-button:hover {
    border: 1px solid #000;
  }
  .ecom-ajax-cart-button-wrap {
    flex: 1 1 {{ width | default: '250px' }};
    text-align: center;
  }
  .ecom-ajax-cart-continue-shopping-button {
    background: #000;
    color: var(--continue-color);
  }
  .ecom-ajax-cart-checkout-button {
    background: #000;
    color: var(--checkout-color);
  }
  .ecom-ajax-cart-viewcart-button {
    background: #000;
    color: var(--viewcart-color);
    cursor: pointer;
  }
  .ecom-ajax-cart-continue-shopping-button:hover {
      cursor: pointer;
      background: rgba(0 0 0 /.8);
      color: var(--continue-color-hover);
  }
  .ecom-ajax-cart-checkout-button:hover {
      cursor: pointer;
      background: rgba(0 0 0 /.8);
